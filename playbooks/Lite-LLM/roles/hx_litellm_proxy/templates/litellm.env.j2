# LiteLLM environment variables
# Generated by Ansible role hx_litellm_proxy
# No secrets here - authentication is handled in config.yaml

# Service binding
LITELLM_HOST={{ litellm_bind_host }}
LITELLM_PORT={{ litellm_bind_port }}

# Telemetry and logging
LITELLM_TELEMETRY=false
LITELLM_LOG_LEVEL=INFO

# Optional: Set proxy environment variables if needed
# HTTP_PROXY=
# HTTPS_PROXY=
# NO_PROXY=localhost,127.0.0.1,{{ litellm_backends | map('urlsplit') | map(attribute='hostname') | join(',') }}

# Optional: Python runtime settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Optional: Service-specific settings
# LITELLM_CACHE_DIR=/var/cache/litellm
# LITELLM_TEMP_DIR=/tmp/litellm