network:
  version: 2
  renderer: networkd
  ethernets:
    {{ iface_map[inventory_hostname_short] }}:
      dhcp4: false
      addresses:
        - {{ ip_map[inventory_hostname_short] }}
      routes:
        - to: 0.0.0.0/0
          via: 192.168.10.1
      nameservers:
        search: [dev-test.hana-x.ai]
        addresses: [{{ (dns_map[inventory_hostname_short] | default(dns_map['default']))[0] }}]
