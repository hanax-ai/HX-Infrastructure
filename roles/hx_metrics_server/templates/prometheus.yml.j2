# HX Infrastructure Prometheus Configuration
# Generated by Ansible - DO NOT EDIT MANUALLY

global:
  scrape_interval: {{ hx_metrics_prometheus_global.scrape_interval | default('15s') }}
  evaluation_interval: {{ hx_metrics_prometheus_global.evaluation_interval | default('15s') }}
  external_labels:
{% for key, value in hx_metrics_prometheus_global.external_labels.items() %}
    {{ key }}: "{{ value }}"
{% endfor %}

scrape_configs:
  # Prometheus self-monitoring
  - job_name: 'prometheus'
    static_configs:
      - targets: ['127.0.0.1:{{ hx_metrics_prometheus_port }}']
        labels:
          service: 'prometheus'
          environment: '{{ ansible_environment | default("dev-test") }}'

{% if hx_metrics_enable_blackbox_monitoring %}
  # Blackbox HTTP monitoring
  - job_name: 'blackbox_http'
    metrics_path: /probe
    params:
      module: [http_2xx]
    static_configs:
      - targets:
{% for target in hx_metrics_blackbox_http_targets | default([]) %}
        - '{{ target }}'
{% endfor %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: 127.0.0.1:{{ hx_metrics_blackbox_port }}
      - target_label: service
        replacement: 'blackbox-http'
{% endif %}

{% if hx_metrics_enable_node_exporter %}
  # Node Exporter for system metrics
  - job_name: 'node'
    static_configs:
      - targets: ['127.0.0.1:{{ hx_metrics_node_exporter_port }}']
        labels:
          service: 'node-exporter'
          hostname: '{{ inventory_hostname }}'
{% endif %}

{% if hx_metrics_enable_service_discovery %}
  # HX Infrastructure Service Discovery
{% for service in hx_metrics_service_discovery | default([]) %}
  - job_name: '{{ service.job_name }}'
    static_configs:
{% for config in service.static_configs %}
      - targets:
{% for target in config.targets %}
        - '{{ target }}'
{% endfor %}
        labels:
          service_group: 'hx-infrastructure'
          environment: '{{ ansible_environment | default("dev-test") }}'
{% endfor %}
{% endfor %}
{% endif %}
